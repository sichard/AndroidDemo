<?xml version="1.0" encoding="utf-8"?>
<com.tct.launcher.weather.view.WeatherDailyItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/weather_daily_week"
        android:layout_width="44dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="MON"
        android:textSize="14sp" />

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/weather_daily_image"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/weather_icon_1" />

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/weather_daily_max_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:text="22°"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/weather_daily_min_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:text="15°"
        android:textSize="14sp" />
</com.tct.launcher.weather.view.WeatherDailyItemView>