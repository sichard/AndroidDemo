<?xml version="1.0" encoding="utf-8"?>
<com.tct.launcher.weather.view.WeatherHourItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/weather_hour_item_width"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/weather_hour_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="16:00"
        android:textSize="12sp"
        android:textColor="#89000000"/>

    <ImageView
        android:id="@+id/weather_hour_image"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginBottom="22dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/weather_icon_1" />
</com.tct.launcher.weather.view.WeatherHourItemView>