<?xml version="1.0" encoding="utf-8"?>
<com.sichard.demo.view.listview.SlideItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/slide_item_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="20dp"
        android:gravity="center_vertical"
        android:text="名称"
        android:textColor="@color/weather_black_87"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/slide_item_delete"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="@drawable/bg_weather_location_item_delete"
        android:gravity="center"
        android:text="@string/weather_list_item_delete"
        android:textColor="@android:color/white" />

</com.sichard.demo.view.listview.SlideItemLayout>