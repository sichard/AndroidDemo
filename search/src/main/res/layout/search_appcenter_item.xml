<?xml version="1.0" encoding="utf-8"?>
<com.android.sichard.search.view.SearchAppCenterItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/search_nomal_item_height"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/search_appcenter_item_head"
        android:layout_width="@dimen/search_contact_item_image_height"
        android:layout_height="@dimen/search_contact_item_image_height"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/search_contact_item_image_padding_left"
        android:src="@drawable/ic_search_in_apps" />

    <TextView
        android:id="@+id/search_appcenter_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toLeftOf="@+id/contact_func_panel"
        android:layout_toRightOf="@+id/search_appcenter_item_head"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="@string/search_appcenter_item_content"
        android:textColor="@color/common_black_87"
        android:textSize="16dp" />

</com.android.sichard.search.view.SearchAppCenterItemView>
