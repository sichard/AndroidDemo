<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->

    <item>
        <shape android:shape="rectangle">

            <stroke
                android:width="1px"
                android:color="#17000000" />

        </shape>
    </item>


    <!-- Blue button -->

    <item
        android:left="1px"
        android:top="1px"
        android:right="1px"
        android:bottom="1px">
        <shape android:shape="rectangle">
            <stroke
                android:width="1px"
                android:color="#fff3f3f3" />
        </shape>
    </item>
</layer-list>

